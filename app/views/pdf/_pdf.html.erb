
<div class="bg-white max-w-screen-lg p-16 shadow-xl mr-1 mt-48 mb-16">
    <div class=" flex">
          <img class="inline-block w-1/3 border-2 border-blue-200" src="https://picsum.photos/300/200/?random=10">
          <div class="inline-block w-1/3 border-2 border-blue-200">
          <p class="text-2xl">
              <div id="content">
                <% if @resume.component_serial == 1 %>
                <p>我是第一版組件</p>
                <turbo-frame id="<%= dom_id @resume %>">
                  <%= link_to '我是編輯按鈕', edit_resume_path(@resume), data: { turbo_frame: "1" }, class: 'flex mr-2 px-4 py-1 w-fit rounded-full block text-white  bg-amber-500 hover:bg-amber-800'  %>
                  <%= @resume.basic_info %>
                </turbo-frame>
                <% elsif @resume.component_serial == 2 %>
                <p>我是第二版組件</p>
                <turbo-frame id="<%= dom_id @resume %>">
                  <%= link_to '我是編輯按鈕', edit_resume_path(@resume), data: { turbo_frame: "1" }  %>
                  <%= @resume.basic_info %>
                </turbo-frame>
                <% elsif @resume.component_serial == 3 %>
                <p>我是第三版組件</p>
                <turbo-frame id="<%= dom_id @resume %>">
                  <%= link_to '我是編輯按鈕', edit_resume_path(@resume), data: { turbo_frame: "1" }  %>
                  <%= @resume.basic_info %>
                </turbo-frame>
                <% else %>
                  <!-- 处理其他情况 -->
                <% end %>
                </div>

          </p>
        </div>
        <div class="inline-block w-1/3 border-2 border-blue-200">
          <p class="text-2xl">
            <%= @resume.social_links %>
          </p>
      </div>
    </div>
</div>